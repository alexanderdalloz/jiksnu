[:div {:ng-if "loaded"}
 [:div.vcard.user-full
  [:div
   [:display-avatar {:data-id "{{user._id}}"  :data-size "96"}]]
  [:p
   [:span.nickname.fn.n "{{user.name}}"]
   " ({{user.username}}@{{user.domain}})"]
  [:div.adr
   [:p.locality "{{user.location}}"]]
  [:p.note "{{user.bio}}"]
  [:link-to {:data-id "{{user.updateSource}}" :data-model "FeedSource"}]
  [:p [:a {:href "{{user.id}}"} "{{user.id}}"]]
  [:p [:a.url {:rel "me" :href "{{user.url}}"} "{{user.url}}"]]]
 [:stream-list {:user "user"}]
 [:followers-list {:data-id "{{user._id}}"}]
 [:following-list {:data-id "{{user._id}}"}]
 [:groups-list {:data-id "{{user._id}}"}]]
